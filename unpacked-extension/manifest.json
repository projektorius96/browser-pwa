{
    "name": "Windows control overlay",
    "version": "0.1.2",
    "manifest_version": 3,
    "description": "The extension provides publicly exposed API to browser native controls whilst in Fullscreen mode",
    "icons": {
        "16": "icons/icon16.png",
        "32": "icons/icon32.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "background": {
        "service_worker": "service-workers/index.js",
        "type": "module"
    },
    "action" : {
        "default_title": "Enter Fullscreen"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content-script.js"
            ]
        }
    ],
    "permissions": ["activeTab"]
}